{% extends 'base.html.twig' %}

{% block title %}Referenced Place{% endblock %}

{% block pageheader %}
    <h1>Referenced Place</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('referenced_place_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('referenced_place_edit', { 'id': referencedPlace.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('referenced_place_delete', { 'id': referencedPlace.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this referenced place?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Variant Spelling</th>
                <td>{{ referencedPlace.variantSpelling }}</td>
            </tr>
            <tr>
                <th>Book</th>
                <td>
                    <a href="{{ path('book_show', { 'id': referencedPlace.book.id}) }}">
                        {{ referencedPlace.book }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Place</th>
                <td>
                    <a href="{{ path('place_show', { 'id': referencedPlace.place.id}) }}">
                        {{ referencedPlace.place }}
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
