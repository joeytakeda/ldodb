{% extends 'base.html.twig' %}

{% block title %}Map Size{% endblock %}

{% block pageheader %}
    <h1>Map Size</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('map_size_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('map_size_edit', { 'id': mapSize.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('map_size_delete', { 'id': mapSize.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this map size?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Map Size</th>
                <td>{{ mapSize.mapSize }}</td>
            </tr><tr>
                <th>Map Size Notes</th>
                <td>{{ mapSize.mapSizeNotes }}</td>
            </tr>
            <tr>
                <th>Books</th>
                <td>
                    {{ include('book/partial/list.html.twig', { books: mapSize.books }) }}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
