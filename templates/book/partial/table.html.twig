{% if books|length > 0 %}
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Imprint</th>
                <th>Edition</th>
                <th>Publication Date</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td>
                        <a href="{{ path('book_show', { 'id': book.id }) }}">
                            {{ book.title }}
                        </a>
                    </td>
                    <td>
                        {% for contributions in book.contributions|filter(c => c.task.taskName == 'Author') %}
                            {% include 'contribution/partial/contributor-link.html.twig' with {'contribution': contributions} %}
                        {% endfor %}
                    </td>
                    <td>{{ book.imprint }}</td>
                    <td>{{ book.edition }}</td>
                    <td>{{ book.publicationDate }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endif %}
