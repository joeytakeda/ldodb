{% extends 'base.html.twig' %}

{% block title %}Binding Features{% endblock %}

{% block pageheader %}
    <h1>Binding Features</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('binding_feature_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('binding_feature_edit', { 'id': bindingFeature.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('binding_feature_delete', { 'id': bindingFeature.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this binding feature?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Binding Features</th>
                <td>{{ bindingFeature.bindingFeature }}</td>
            </tr><tr>
                <th>Binding Feature Notes</th>
                <td>{{ bindingFeature.bindingFeatureNotes }}</td>
            </tr>
            <tr>
                <th>Books</th>
                <td>
                    {{ include('book/partial/list.html.twig', { books: bindingFeature.books }) }}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
