{% extends 'base.html.twig' %}

{% block title %}Digital Copy Holders{% endblock %}

{% block pageheader %}
    <h1>Digital Copy Holder List</h1>
    <p class="count">
        Displaying {{ digitalCopyHolders|length }} digital copy holders of {{ digitalCopyHolders.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('digital_copy_holder_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr><th>Organization Name</th>            </tr>
        </thead>
        <tbody>
            {% for digitalCopyHolder in digitalCopyHolders %}
                <tr>
                    <td>
                        <a href="{{ path('digital_copy_holder_show', { 'id': digitalCopyHolder.id }) }}">
                            {{ digitalCopyHolder.organizationName }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(digitalCopyHolders) }}
    </div>

{% endblock %}
