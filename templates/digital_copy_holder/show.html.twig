{% extends 'base.html.twig' %}

{% block title %}Digital Copy Holder{% endblock %}

{% block pageheader %}
    <h1>Digital Copy Holder</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('digital_copy_holder_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('digital_copy_holder_edit', { 'id': digitalCopyHolder.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('digital_copy_holder_delete', { 'id': digitalCopyHolder.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this digital copy holder?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Organization Name</th>
                <td>{{ digitalCopyHolder.organizationName }}</td>
            </tr>
            <tr>
                <th>Books</th>
                <td>
                    {% if digitalCopyHolder.books | length > 0 %}
                        <ul>
                            {% for books in digitalCopyHolder.books %}
                                <li>
                                    <a href="{{ path("book_show", {"id":books.id}) }}">
                                        {{ books }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
