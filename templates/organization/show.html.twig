{% extends 'base.html.twig' %}

{% block title %}Organization{% endblock %}

{% block pageheader %}
    <h1>Organization</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('organization_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('organization_edit', { 'id': organization.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('organization_delete', { 'id': organization.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this organization?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Organization Name</th>
                <td>{{ organization.organizationName }}</td>
            </tr><tr>
                <th>Organization URI</th>
                <td>{{ organization.organizationUri }}</td>
            </tr><tr>
                <th>Organization Notes</th>
                <td>{{ organization.organizationNotes }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Contributions</h2>
    {{ include('contribution/partial/list.html.twig', {
         'contributions': organization.contributions,
         'partial': 'book-link.html.twig',
    }) }}
{% endblock %}
