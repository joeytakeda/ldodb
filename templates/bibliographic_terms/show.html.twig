{% extends 'base.html.twig' %}

{% block title %}Bibliographic Terms{% endblock %}

{% block pageheader %}
    <h1>Bibliographic Terms</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('bibliographic_terms_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('bibliographic_terms_edit', { 'id': bibliographicTerm.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('bibliographic_terms_delete', { 'id': bibliographicTerm.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this bibliographic term?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Bibliographic Term</th>
                <td>{{ bibliographicTerm.bibliographicTerm }}</td>
            </tr><tr>
                <th>Use For Format</th>
                <td>{% if bibliographicTerm.useForFormat %}Yes{% else %}No{% endif %}</td>
            </tr><tr>
                <th>Use For Photographs</th>
                <td>{% if bibliographicTerm.useForPhotographs %}Yes{% else %}No{% endif %}</td>
            </tr><tr>
                <th>Use For Illustrations</th>
                <td>{% if bibliographicTerm.useForIllustrations %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
