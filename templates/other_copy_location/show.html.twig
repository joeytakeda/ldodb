{% extends 'base.html.twig' %}

{% block title %}Other Copy Location{% endblock %}

{% block pageheader %}
    <h1>Other Copy Location</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('other_copy_location_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('other_copy_location_edit', { 'id': otherCopyLocation.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('other_copy_location_delete', { 'id': otherCopyLocation.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this other copy location?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Other Copy Location</th>
                <td>{{ otherCopyLocation.otherCopyLocation }}</td>
            </tr><tr>
                <th>Copy Count</th>
                <td>{{ otherCopyLocation.copyCount }}</td>
            </tr>
            <tr>
                <th>Book</th>
                <td>
                    <a href="{{ path('book_show', { 'id': otherCopyLocation.book.id}) }}">
                        {{ otherCopyLocation.book }}
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
