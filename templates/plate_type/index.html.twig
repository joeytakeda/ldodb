{% extends 'base.html.twig' %}

{% block title %}Plate Types{% endblock %}

{% block pageheader %}
    <h1>Plate Type List</h1>
    <p class="count">
        Displaying {{ plateTypes|length }} plate types of {{ plateTypes.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('plate_type_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr><th>Plate Type</th></tr>
        </thead>
        <tbody>
            {% for plateType in plateTypes %}
                <tr>
                    <td>
                        <a href="{{ path('plate_type_show', { 'id': plateType.id }) }}">
                            {{ plateType.plateType }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(plateTypes) }}
    </div>

{% endblock %}
