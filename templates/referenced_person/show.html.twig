{% extends 'base.html.twig' %}

{% block title %}Referenced Person{% endblock %}

{% block pageheader %}
    <h1>Referenced Person</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('referenced_person_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('referenced_person_edit', { 'id': referencedPerson.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('referenced_person_delete', { 'id': referencedPerson.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this referenced person?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Last Name</th>
                <td>{{ referencedPerson.lastName }}</td>
            </tr><tr>
                <th>First Name</th>
                <td>{{ referencedPerson.firstName }}</td>
            </tr><tr>
                <th>Birth Date</th>
                <td>{{ referencedPerson.birthDate }}</td>
            </tr><tr>
                <th>Death Date</th>
                <td>{{ referencedPerson.deathDate }}</td>
            </tr><tr>
                <th>Same As People Entity ID</th>
                <td>{{ referencedPerson.sameAsPeopleEntityId }}</td>
            </tr><tr>
                <th>Referenced Person URI</th>
                <td>{{ referencedPerson.referencedPersonUri }}</td>
            </tr>
            <tr>
                <th>Books</th>
                <td>
                    {{ include('book/partial/list.html.twig', { books: referencedPerson.books }) }}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
