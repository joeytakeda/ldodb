{% extends 'base.html.twig' %}

{% block title %}Role{% endblock %}

{% block pageheader %}
    <h1>Role</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('role_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('role_edit', { 'id': role.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('role_delete', { 'id': role.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this role?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Role Name</th>
                <td>{{ role.roleName }}</td>
            </tr>
            <tr>
                <th>People</th>
                <td>
                    {{ include('people/partial/list.html.twig', { people: role.people }) }}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
