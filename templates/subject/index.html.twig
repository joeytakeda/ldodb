{% extends 'base.html.twig' %}

{% block title %}Subjects{% endblock %}

{% block pageheader %}
    <h1>Subject List</h1>
    <p class="count">
        Displaying {{ subjects|length }} subjects of {{ subjects.getTotalItemCount }} total. </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('subject_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Subject Name</th>
                <th>Entry Count</th>
            </tr>
        </thead>
        <tbody>
            {% for subject in subjects %}
                <tr>
                    <td>
                        <a href="{{ path('subject_show', { 'id': subject.id }) }}">
                            {{ subject.subjectName }}
                        </a>
                    </td>
                    <td>{{ subject.books.count }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(subjects) }}
    </div>

{% endblock %}
