{% extends 'base.html.twig' %}

{% block title %}Subject{% endblock %}

{% block pageheader %}
    <h1>Subject</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('subject_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('subject_edit', { 'id': subject.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('subject_delete', { 'id': subject.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this subject?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Subject Name</th>
                <td>{{ subject.subjectName }}</td>
            </tr><tr>
                <th>Subject URI</th>
                <td>{{ subject.subjectUri }}</td>
            </tr>
            <tr>
                <th>Books</th>
                <td>
                    {{ include('book/partial/list.html.twig', { books: books }) }}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
