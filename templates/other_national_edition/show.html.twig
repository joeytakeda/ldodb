{% extends 'base.html.twig' %}

{% block title %}Other National Edition{% endblock %}

{% block pageheader %}
    <h1>Other National Edition</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('other_national_edition_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('other_national_edition_edit', { 'id': otherNationalEdition.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('other_national_edition_delete', { 'id': otherNationalEdition.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this other national edition?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Publication Date</th>
                <td>{{ otherNationalEdition.publicationDate }}</td>
            </tr>
            <tr>
                <th>Book</th>
                <td>
                    <a href="{{ path('book_show', { 'id': otherNationalEdition.book.id}) }}">
                        {{ otherNationalEdition.book }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Place</th>
                <td>
                    <a href="{{ path('place_show', { 'id': otherNationalEdition.place.id}) }}">
                        {{ otherNationalEdition.place }}
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
